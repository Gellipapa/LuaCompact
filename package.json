{
	"name": "luapacker",
	"version": "1.0.0",
	"description": "Luapacker is a Lua bundler written in Typescript that combines multiple Lua files into one.",
	"main": "dist/index.js",
	"bin": {
		"luapacker": "./dist/index.js",
		"lpk": "./dist/index.js"
	},
	"scripts": {
		"copy": "copyfiles --error --up 1 src/functions.lua dist",
		"build": "npm run copy && tsc",
		"watch": "npm run copy && tsc --watch"
	},
	"author": "parritz",
	"license": "MIT",
	"dependencies": {
		"chalk": "^4.1.2",
		"fs": "^0.0.1-security",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"copyfiles": "^2.4.1",
		"typescript": "^4.7.4"
	}
}
