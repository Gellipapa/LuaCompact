{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2017",

		/* Modules */
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true
	},
	"exclude": [
		"node_modules",
		"dist"
  	]
}
